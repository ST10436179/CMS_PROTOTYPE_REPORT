<Window x:Class="CMCSPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Contract Monthly Claim System" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Submit Claim (Lecturer)">
                <StackPanel Margin="10">
                    <Label Content="Hours Worked:"/>
                    <TextBox/>
                    <Label Content="Hourly Rate:"/>
                    <TextBox/>
                    <Label Content="Additional Notes:"/>
                    <TextBox AcceptsReturn="True" Height="100"/>
                    <Button Content="Upload Document" Width="150" Margin="0,10"/>
                    <Button Content="Submit Claim" Width="150" Margin="0,10"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Approve Claims (Coordinator/Manager)">
                <StackPanel Margin="10">
                    <ListView>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Claim ID" Width="100"/>
                                <GridViewColumn Header="Lecturer" Width="150"/>
                                <GridViewColumn Header="Hours" Width="100"/>
                                <GridViewColumn Header="Rate" Width="100"/>
                                <GridViewColumn Header="Status" Width="100"/>
                            </GridView>
                        </ListView.View>
                        <!-- Sample items for prototype -->
                        <ListViewItem>
                            <GridViewRowPresenter Content="1 | John Doe | 40 | 50 | Pending"/>
                        </ListViewItem>
                    </ListView>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button Content="Approve" Width="100" Margin="5"/>
                        <Button Content="Reject" Width="100" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Track Status">
                <StackPanel Margin="10">
                    <ListView>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Claim ID" Width="100"/>
                                <GridViewColumn Header="Submission Date" Width="150"/>
                                <GridViewColumn Header="Status" Width="150"/>
                            </GridView>
                        </ListView.View>
                        <!-- Sample items -->
                        <ListViewItem>
                            <GridViewRowPresenter Content="1 | 2025-09-01 | Pending"/>
                        </ListViewItem>
                    </ListView>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>